      <number size="11" defaultvalue="0" decimals="0"/>
    </column>
    <column id="session_info.last_use" name="last_use" required="true" auto="false">
      <number size="11" defaultvalue="0" decimals="0"/>
    </column>
    <column id="session_info.role_id" name="role_id" required="true" auto="false">
      <number size="11" defaultvalue="0" decimals="0"/>
    </column>
    <column id="session_info.vars" name="vars" required="false" auto="false">
      <binary/>
    </column>
    <column id="session_info.remember" name="remember" required="false" auto="false">
      <number size="11" defaultvalue="0" decimals="0"/>
    </column>
    <constraints>
