<xar:comment> License: GPL http://www.gnu.org/copyleft/gpl.html </xar:comment>
<div class="xar-mod-head">
    <span class="xar-mod-title"><xar:mlstring>Roles</xar:mlstring></span>
</div>
<div class="xar-mod-body">
    <h2><xar:mlstring>Member List</xar:mlstring></h2>
        <xar:style scope="module" module="base" file="navtabs" />
        <dl class="xar-tabs">
            <dt class="help">
                <xar:mlstring>
                    Sort
                </xar:mlstring>
                :
            </dt>
                <xar:if condition="$letter eq ''">
                    <dd class="active">
                        <a href="#xarModURL('roles','user','view',array('phase' => $phase, 'letter' => '', 'order' => $order))#">
                            <xar:mlstring>All</xar:mlstring>
                        </a>
                    </dd>
                <xar:else />
                    <dd>
                        <a href="#xarModURL('roles','user','view',array('phase' => $phase, 'letter' => '', 'order' => $order))#">
                            <xar:mlstring>All</xar:mlstring>
                        </a>
                    </dd>
                </xar:if>
            <xar:foreach in="$alphabet" value="$ltr">
                <xar:if condition="$letter eq $ltr">
                    <dd class="active">
                        <a href="#xarModURL('roles','user','view',array('phase' => $phase, 'letter' => $ltr, 'order' => $order))#">
                            #$ltr#
                        </a>
                    </dd>
                <xar:else />
                    <dd>
                        <a href="#xarModURL('roles','user','view',array('phase' => $phase, 'letter' => $ltr, 'order' => $order))#">
                            #$ltr#
                        </a>
                    </dd>
                </xar:if>
            </xar:foreach>
                <xar:if condition="$letter eq 'Other'">
                    <dd class="active">
                        <a href="#xarModURL('roles','user','view',array('phase' => $phase, 'letter' => 'Other', 'order' => $order))#">
                            <xar:mlstring>Other</xar:mlstring>
                        </a>
                    </dd>
                <xar:else />
                    <dd>
                        <a href="#xarModURL('roles','user','view',array('phase' => $phase, 'letter' => 'Other', 'order' => $order))#">
                            <xar:mlstring>Other</xar:mlstring>
                        </a>
                    </dd>
                </xar:if>
        </dl>
        <div>
            <dl class="xar-tabs">
                <dt class="help">
                    <xar:mlstring>
                        Show
                    </xar:mlstring>
                    :
                </dt>
                <xar:if condition="$phase ne 'active'">
                    <dd class="active">
                        <a href="#xarModURL('roles','user','view',array('phase' => 'viewall', 'letter' => $letter, 'search' => $search, 'order' => $order))#">
                        <xar:mlstring>All</xar:mlstring>
                        </a>
                    </dd>
                <xar:else />
                    <dd>
                        <a href="#xarModURL('roles','user','view',array('phase' => 'viewall', 'letter' => $letter, 'search' => $search, 'order' => $order))#">
                        <xar:mlstring>All</xar:mlstring>
                        </a>
                    </dd>
                </xar:if>
                <xar:if condition="$phase eq 'active'">
                    <dd class="active">
                        <a href="#xarModURL('roles','user','view',array('phase' => 'active', 'letter' => $letter, 'search' => $search, 'order' => $order))#">
                        <xar:mlstring>Online</xar:mlstring>
                        </a>
                    </dd>
                <xar:else />
                    <dd>
                        <a href="#xarModURL('roles','user','view',array('phase' => 'active', 'letter' => $letter, 'search' => $search, 'order' => $order))#">
                        <xar:mlstring>Online</xar:mlstring>
                        </a>
                    </dd>
                </xar:if>
            </dl>
        </div>
        <div class="xar-clearboth">&#160;</div>
    <xar:if condition="!empty($message)">
        <p>#xarVarPrepForDisplay($message)#</p>
    <xar:else />
        <xar:if condition="xarModIsHooked('dynamicdata','roles')">
            <xar:data-getitems name="$properties" value="$values" module="roles" itemids="$uidlist" />
        </xar:if>
        <xar:set name="usersendemails">xarModGetVar('roles', 'usersendemails')</xar:set>
        <table class="xar-items">
            <thead>
            <tr>
            <xar:if condition="$phase eq 'active' and xarSecurityCheck('AdminRole',0)">
                <th class="xar-thirdwidth">
                    <a href="#xarModURL('roles','user','view',array('phase' => $phase, 'letter' => $letter, 'search' => $search, 'order' => 'name'))#">
                        <xar:mlstring>Display Name</xar:mlstring>
                    </a>
                </th>
                <th class="xar-thirdwidth">
                    <a href="#xarModURL('roles','user','view',array('phase' => $phase, 'letter' => $letter, 'search' => $search, 'order' => 'uname'))#">
                        <xar:mlstring>IP Address</xar:mlstring>
                    </a>
                </th>
            <xar:else />
                <th class="xar-twothirdwidth">
                    <a href="#xarModURL('roles','user','view',array('phase' => $phase, 'letter' => $letter, 'search' => $search, 'order' => 'name'))#">
                        <xar:mlstring>Display Name</xar:mlstring>
                    </a>
                </th>
            </xar:if>
            <xar:if condition="$usersendemails">
                <th>
                    <xar:mlstring>Email</xar:mlstring>
                </th>
            </xar:if>
            <xar:if condition="isset($properties) and count($properties) gt 0">
                <!-- TODO: adapt % of column widths -->
                <xar:foreach in="$properties" key="$key">
                <th>
                    <xar:data-label property="$properties[$key]" />
                </th>
                </xar:foreach>
            </xar:if>
            </tr>
            </thead>
            <tbody>
            <xar:loop name="$items">
                <xar:if condition="(($loop:index + 1) % 2)">
                    <xar:set name="item_class">'xar-norm'</xar:set>
                <xar:else/>
                    <xar:set name="item_class">'xar-accent'</xar:set>
                </xar:if>

                <tr class="#$item_class#">
                <xar:if condition="!empty($loop:item['ipaddr']) and xarSecurityCheck('AdminRole',0)">
                    <td>
                        <a href="&xar-modurl-roles-user-display;&amp;uid=#$loop:item.uid#">#xarVarPrepForDisplay($loop:item['name'])#</a>
                    </td>
                    <td class="xar-align-center">
                        <!-- TODO: add link to working whois service -->
                        #xarVarPrepForDisplay($loop:item['ipaddr'])#
                    </td>
                <xar:else />
                    <td>
                        <xar:if condition="xarUserIsLoggedIn()">
                            <a href="&xar-modurl-roles-user-display;&amp;uid=#$loop:item.uid#">#xarVarPrepForDisplay($loop:item['name'])#</a>
                        <xar:else />
                            #xarVarPrepForDisplay($loop:item['name'])#
                        </xar:if>
                    </td>
                </xar:if>
                <xar:if condition="$usersendemails and xarModGetUserVar('roles','usersendemails',$loop:item['uid'])">
                    <td class="xar-align-center">
                        <xar:if condition="empty($loop:item['emailurl']) || !xarUserIsLoggedIn()">
                            <img src="#$loop:item['emailicon']#" alt="#xarML('Email')#" title="#xarML('Email')#"/>
                        <xar:else />
                            <a href="#$loop:item['emailurl']#"><img src="#$loop:item['emailicon']#" alt="#xarML('Email')#" title="#xarML('Email')#"/></a>
                        </xar:if>
                    </td>
                </xar:if>
                <xar:if condition="isset($properties) and count($properties) gt 0">
                    <xar:set name="uid">#$loop:item['uid']#</xar:set>
                    <xar:foreach in="$properties" key="$key">
                        <td>
                            <xar:if condition="isset($values[$uid][$key])">
                                <xar:data-output property="$properties[$key]" value="$values[$uid][$key]" />
                            <xar:else />
                                &#160;&#160;
                            </xar:if>
                        </td>
                    </xar:foreach>
                </xar:if>
                </tr>
            </xar:loop>
            </tbody>
        </table>

        <!-- add the pager here -->
        <div class="xar-align-center">#$pager#</div>
        <form method="post" action="#xarModURL('roles','user','view')#">
            <div class="xar-form-input-wrapper">
                <label for="search" class="xar-form-label">
                    <xar:mlstring>Search:</xar:mlstring>
                </label>
                <input type="text" name="search" id="search" value="" maxlength="255" class="xar-form-textlong" />
                <input type="hidden" name="phase" id="phase" value="#xarVarPrepForDisplay($phase)#" />
                <input type="hidden" name="order" id="order" value="#xarVarPrepForDisplay($order)#" />
                <input type="hidden" name="letter" id="letter" value="" />
                <input type="submit" value="#xarVarPrepForDisplay($searchlabel)#" class="xar-margin-thickleft" />
            </div>
        </form>
        <p>
            <xar:mlstring>Search condition</xar:mlstring>: <strong>#xarVarPrepForDisplay($msg)#</strong>
        </p>
    </xar:if>
</div>
