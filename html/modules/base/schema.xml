    <column id="template_tags.handler" name="handler" required="true" auto="false">
      <text size="255" defaultvalue=""/>
    </column>
    <column id="template_tags.data" name="data" required="false" auto="false">
      <text/>
    </column>
    <constraints>
      <primary name="id">
        <columnref id="template_tags.id"/>
      </primary>
    </constraints>
  </table>
</schema>
