<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE schema PUBLIC "-//XAR//DTD DDL 1.0 Strict//EN" "http://xaraya.com/schema/DTD/ddl-strict.dtd">
<schema name="xaraya">
  <table name="dynamic_data">
    <column id="dynamic_data.id" name="id" required="true" auto="true">
      <number size="11" />
    </column>
    <column id="dynamic_data.propid" name="propid" required="true" >
      <number size="11" default="0" />
    </column>
    <column id="dynamic_data.itemid" name="itemid" required="true" >
      <number size="11" default="0" />
    </column>
    <column id="dynamic_data.value" name="value"  >
      <text/>
    </column>
    <constraints>
      <primary name="id">
        <column ref="dynamic_data.id"/>
      </primary>
      <index name="i_dyndata_propid">
        <column ref="dynamic_data.propid"/>
      </index>
      <index name="i_dyndata_itemid">
        <column ref="dynamic_data.itemid"/>
