<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">
    <xar:if condition="!empty($treenode)">
        <ul>
            <xar:set name="lastnode">max(0,count($treenode)-1)</xar:set>
            <xar:for start="$i = 0" test="$i le $lastnode" iter="$i++">
                <xar:set name="childrennode">$treenode[$i]['children']</xar:set>
                <xar:set name="node">$treenode[$i]['parent']</xar:set>
                <xar:set name="drawchildren">true</xar:set>

                <xar:if condition="$i eq $lastnode">
                    <xar:set name="islast">"lastnode"</xar:set>
                <xar:else />
                    <xar:set name="islast">""</xar:set>
                </xar:if>
                <xar:if condition="!empty($childrennode)">
                    <xar:set name="children">"children"</xar:set>
                <xar:else />
                    <xar:set name="children">""</xar:set>
                </xar:if>
                <li class="leaf #$islast# #$children#">
                    <!-- Placeholder spans
                    -->
                    <span class="a #$islast# #$children#"><span class="b"><span class="c">
                    <!-- Tree branch and description
                    -->
                        <span class="treeattributes">
                            <xar:if condition="$drawchildren eq false">
                                <span style="padding-left: 1em">
                                    <b>#$node['name']#</b> <xar:mlstring>see the entry above</xar:mlstring>
                                </span>
                            <xar:else />
                                <xar:set name="numofsubgroups">count(xarRoles::getsubgroups($node['id']))</xar:set>
                                <xar:set name="numofsubgroups">1</xar:set>
                                <xar:set name="subgroups">$numofsubgroups == 1 ? xarML('subgroup') : xarML('subgroups')</xar:set>
                                <xar:set name="users">$node['users'] == 1 ? xarML('user') : xarML('users')</xar:set>
                                <xar:set name="description">$numofsubgroups . " " . $subgroups . ' | ' . $node['users'] . " " . $users</xar:set>
                                <a href="#xarModURL('roles', 'admin', 'modify', array('id' => $node['id']))#" title="#xarML('Modify this Group')#" style="margin: 0 0.25em 0 0.25em;">
                                    #$node['name']#
                                </a> #$description#
                            </xar:if>

                        <!-- Delete item
                        -->
                            <xar:set name="seccheck">xarSecurityCheck('DeleteRole',0,'Roles',$node['name'])</xar:set>
                            <xar:if condition="($seccheck eq false) or ($node['users'] gt 0) or ($drawchildren eq false)">
                            <xar:else />
                                <a href="#xarModURL('roles', 'admin', 'delete', array('id' => $node['id']))#" title="#xarML('Delete this Group')#" style="margin: 0 0.25em 0 0.25em;">
                                    <img src="#xarTplGetImage('delete.png')#" alt="" />
                                </a>
                            </xar:if>

                        <!-- Users item
                        -->
                            <xar:if condition="($node['users'] gt 0) and ($drawchildren)">
                                <a href="#xarModURL('roles', 'admin', 'showusers', array('id' => $node['id'], 'reload' => 1))#" title="#xarML('Show the Users in this Group')#" style="margin: 0 0.25em 0 0.25em;">
                                    <img src="#xarTplGetImage('users.png')#" alt="" />
                                </a>
                            </xar:if>

                        <!-- Email item
                        -->
                            <xar:if condition="($node['users'] gt 0) and ($drawchildren)">
                            <xar:else />
                                <a href="#xarModURL('roles', 'admin', 'createmail', array('id' => $node['id']))#" title="#xarML('Email the Users in this Group')#" style="margin: 0 0.25em 0 0.25em;">
                                    <img src="#xarTplGetImage('email.png')#" alt="" />
                                </a>
                            </xar:if>

                        <!-- Show privileges item
                        -->
                            <xar:if condition="$drawchildren">
                                <a href="#xarModURL('roles', 'admin', 'showprivileges', array('id' => $node['id']))#" title="#xarML('Show the Privileges assigned to this Group')#" style="margin: 0 0.25em 0 0.25em;">
                                    <img src="#xarTplGetImage('privileges.png')#" alt="" />
                                </a>
                            </xar:if>

                        <!-- Test privileges item
                        -->
                            <xar:if condition="$drawchildren">
                                <a href="#xarModURL('roles', 'admin', 'testprivileges', array('id' => $node['id']))#" title="#xarML('Test this Groups\'s Privileges')#" style="margin: 0 0.25em 0 0.25em;">
                                    <img src="#xarTplGetImage('test.png')#" alt="" />
                                </a>
                            </xar:if>
                        </span>
                    </span></span></span>

                    <!-- Now do the children
                    -->
                    <xar:if condition="!empty($childrennode)">
                        <xar:template file="tree" subdata="array('treenode'=&gt;$childrennode)"/>
                    </xar:if>
                </li>
            </xar:for>
        </ul>
    </xar:if>
</xar:template>