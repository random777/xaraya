<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">
    <!-- License: GPL http://www.gnu.org/copyleft/gpl.html -->
    <div class="xar-form-input-wrapper">
        <label class="xar-form-label">
            <xar:mlstring>
                Legend of Actions
            </xar:mlstring>
        </label>
        <strong>
            <xar:mlstring>
                [D]efault [H]idden [M]aximized [E]dit [R]emove
            </xar:mlstring>
        </strong>
    </div>
    <div class="xar-overflow-auto" style="clear:both">
        <xar:loop name="$blocks">
            <xar:if condition="(($loop:index + 1) % 2)">
                <div class="xar-floatleft xar-halfwidth xar-border-thinbottom">
                    <div class="xar-sub xar-floatright xar-align-right">
                        [
                        <xar:if condition="!empty($loop:item.groups)">
                            <xar:loop name="$loop:item.groups" id="groupsl">
                                <a href="#xarMOdURL('blocks','admin','modify_group')#&amp;id=#$loop:groupsl:item.id#" title="#xarML('Edit group')#">
                                    #$loop:groupsl:item.name#
                                </a>
                            </xar:loop>
                            <xar:else />
                            <xar:mlstring>
                                none
                            </xar:mlstring>
                        </xar:if>
                        |
                        <xar:if condition="$loop:item['template'] ne NULL">
                            #$loop:item['template']# &#160;
                            <xar:else />
                            <xar:if condition="empty($loop:item['group_template'])">
                                <xar:mlstring>
                                    D
                                </xar:mlstring>
                                <xar:else />
                                #$loop:item['group_template']# &#160;
                            </xar:if>
                        </xar:if>
                        |
                        <xar:if condition="$loop:item['state'] eq '0'">
                            <xar:mlstring>
                                H
                            </xar:mlstring>
                            <xar:else />
                            <xar:mlstring>
                                M
                            </xar:mlstring>
                        </xar:if>
                        |
                        <a href="#xarMOdURL('blocks','admin','modify_instance')#&amp;bid=#$loop:item.bid#">
                            <xar:mlstring>
                                E
                            </xar:mlstring>
                        </a>
                        |
                        <a href="#$loop:item['deleteurl']#" onclick="return xar_base_confirmLink(this, '#xarVarPrepForDisplay($loop:item['deleteconfirm'])#')">
                            <xar:mlstring>
                                R
                            </xar:mlstring>
                        </a>
                        ]
                    </div>
                    <xar:if condition="empty($loop:item['title'])">
                        #$loop:item['name']#
                        <xar:else />
                        <span title="#xarVarPrepfordisplay($loop:item['title'])#">
                            #$loop:item['name']#
                        </span>
                    </xar:if>
                </div>
                <xar:else />
                <div class="xar-floatright xar-halfwidth xar-border-thinbottom">
                    <div class="xar-sub xar-floatright xar-align-right">
                        [
                        <xar:if condition="!empty($loop:item.groups)">
                            <xar:loop name="$loop:item.groups" id="groupsr">
                                <a href="#xarMOdURL('blocks','admin','modify_group')#&amp;id=#$loop:groupsr:item.id#" title="#xarML('Edit group')#">
                                    #$loop:groupsr:item.name#
                                </a>
                            </xar:loop>
                            <xar:else />
                            <xar:mlstring>
                                none
                            </xar:mlstring>
                        </xar:if>
                        |
                        <xar:if condition="$loop:item['template'] ne NULL">
                            #$loop:item['template']# &#160;
                            <xar:else />
                            <xar:if condition="empty($loop:item['group_template'])">
                                <xar:mlstring>
                                    D
                                </xar:mlstring>
                                <xar:else />
                                #$loop:item['group_template']# &#160;
                            </xar:if>
                        </xar:if>
                        |
                        <xar:if condition="$loop:item['state'] eq '0'">
                            <xar:mlstring>
                                H
                            </xar:mlstring>
                            <xar:else />
                            <xar:mlstring>
                                M
                            </xar:mlstring>
                        </xar:if>
                        |
                        <a href="#xarMOdURL('blocks','admin','modify_instance')#&amp;bid=#$loop:item.bid#">
                            <xar:mlstring>
                                E
                            </xar:mlstring>
                        </a>
                        |
                        <a href="#$loop:item['deleteurl']#" onclick="return xar_base_confirmLink(this, '#xarVarPrepForDisplay($loop:item['deleteconfirm'])#')">
                            <xar:mlstring>
                                R
                            </xar:mlstring>
                        </a>
                        ]
                    </div>
                    <xar:if condition="empty($loop:item['title'])">
                        #$loop:item['name']#
                        <xar:else />
                        <span title="#xarVarPrepfordisplay($loop:item['title'])#">
                            #$loop:item['name']#
                        </span>
                    </xar:if>
                </div>
            </xar:if>
        </xar:loop>
    </div>
</xar:template>