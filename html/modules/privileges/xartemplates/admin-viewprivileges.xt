        <fieldset>
            <legend>Privilege hierarchy</legend>
            <style type="text/css">ul.tree { margin-left: 4em;} ul.tree div.preamble { position:
            absolute; left: 3em; }</style>
            <xar:data-input type="privilegestree" show="$show" />
        </fieldset>
    </div>
</xar:template>
