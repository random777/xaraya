<div class="xar-mod-head">
    <span class="xar-mod-title">
        <xar:mlstring>
            Blocks Administration 
        </xar:mlstring>
    </span>
</div>
<div class="xar-mod-body">
 <xar:template type="module" file="admin-menu" />
    <h2>
        <xar:mlstring>
            Delete Group 
        </xar:mlstring>
    </h2>
    <form method="post" action="#xarModURL('blocks','admin','delete_group')#">
        <fieldset>
            <legend>
                <xar:mlstring>
                    Confirm deleting this group? 
                </xar:mlstring>
            </legend>
            <p>
                <xar:mlstring>
                    Name: 
                </xar:mlstring>
                <xar:var name="$group['name']" />
            </p>
            <p>
                <xar:mlstring>
                    Members: 
                </xar:mlstring>
                <xar:if condition="!empty($group['instances'])">
                    <xar:loop name="$group['instances']">
                        #$loop:item['title']# 
                    </xar:loop>
                    <xar:else />
                    [ 
                    <xar:mlstring>
                        none 
                    </xar:mlstring>
                    ] 
                </xar:if>
            </p>
            <p>
                <xar:mlstring>
                    Template: 
                </xar:mlstring>
                <xar:var name="$group['template']" />
            </p>
        </fieldset>
        <div class="xar-form-footer">
            <input type="hidden" name="authid" id="authid" value="#$authid#" />
            <input type="hidden" name="confirm" id="confirm" value="true" />
            <input type="hidden" name="gid" id="gid" value="#$group['id']#" />
            <input type="submit" value="#xarML('Delete Group')#" class="xar-margin-thick" />
            <p>
                <a href="#xarModURL('blocks', 'admin', 'view_groups')#"><xar:mlstring>Cancel</xar:mlstring></a>
            </p>
        </div>
    </form>
</div>
