<xar:if condition="$confirm">
  <xar:set name="askagain"><xar:mlstring>Type again:</xar:mlstring></xar:set>
  <input type="password" id="#$id#[0]" name="#$name#[0]" value="#$value#" size="#$size#" maxlength="#$maxlength#" tabindex="#$tabindex#" class="xar-form-textlong" />
  &nbsp;#$askagain#
  <input type="password" id="#$id#[1]" name="#$name#[1]" value="#$value#" size="#$size#" maxlength="#$maxlength#" tabindex="#$tabindex#" class="xar-form-textlong" />
<xar:else/>
  <input type="password" id="#$id#" name="#$name#" value="#$value#" size="#$size#" maxlength="#$maxlength#" tabindex="#$tabindex#" class="xar-form-textlong" />
</xar:if>
  <xar:if condition="!empty($invalid)">
    <span class="xar-error">#$invalid#</span>
</xar:if>
