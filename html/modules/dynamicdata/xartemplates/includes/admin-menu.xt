<xar:comment>Common Administration menu</xar:comment>
<xar:if condition="xarModGetVar('themes','adminpagemenu')">

<xar:style scope="module" module="base" file="navtabs" />
<xar:set name="request">xarRequest::getInfo()</xar:set>
<xar:set name="activetab">#$request.2#</xar:set>
<xar:set name="activetype">#$request.1#</xar:set>

<div>
  <dl class="xar-tabs">
    <dt class="help" title="#xarML('Choose an action to perform')#">
      <xar:mlstring>Actions:</xar:mlstring>
    </dt>
    <xar:sec mask="EditDynamicData" catch="false">
      <xar:if condition="$activetab eq 'view' or $activetab eq 'new' or $activetab eq 'modify' or $activetab eq 'modifyprop'">
            <xar:set name="tabclass">'active'</xar:set>
        <xar:else />
             <xar:set name="tabclass">''</xar:set>
        </xar:if>
        <dd class="#$tabclass#">
          <a href="#xarModURL('dynamicdata','admin','view')#">
            <xar:mlstring>Manage DD Objects</xar:mlstring>
          </a>
        </dd>
    </xar:sec>

    <xar:sec mask="AdminDynamicData" catch="false">
        <xar:set name="tabclass">$activetab=='modifyconfig'?'active':''</xar:set>
        <dd class="#$tabclass#">
          <a href="#xarModURL('dynamicdata','admin','modifyconfig')#">
            <xar:mlstring>List Property Types</xar:mlstring>
          </a>
        </dd>
    </xar:sec>
    <xar:sec mask="AdminDynamicData" catch="false">
        <xar:if condition="$activetab eq 'utilities' or $activetab eq 'query' or $activetype eq 'util'">
            <xar:set name="tabclass">'active'</xar:set>
        <xar:else />
             <xar:set name="tabclass">''</xar:set>
        </xar:if>

        <dd class="#$tabclass#">
            <a href="#xarModURL('dynamicdata','admin','utilities')#" >
                <xar:mlstring>Utilities</xar:mlstring>
            </a>
        </dd>
    </xar:sec>
    <xar:sec mask="EditDynamicData" catch="false">
    <xar:set name="tabclass">($activetab=='main' or $activetab=='overview')?'active':''</xar:set>
    <dd class="#$tabclass#">
      <a href="#xarModURL('dynamicdata','admin','overview')#">
        <xar:mlstring>Overview</xar:mlstring>
      </a>
    </dd>
    </xar:sec>
  </dl>
</div>
</xar:if>