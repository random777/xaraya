<?xml version="1.0"?>
<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">
    <!-- License: GPL http://www.gnu.org/copyleft/gpl.html -->
    <div class="xar-form-input-wrapper">
        <label for="metadescription#$blockid#" title="#xarML('Add the meta description.')#"
        class="xar-form-label">Meta Description:</label>
        <div class="xar-form-container-after">
            <textarea name="metadescription" id="metadescription#$blockid#"
            class="xar-form-textarealarge">#$metadescription#</textarea>
        </div>
    </div>
    <div class="xar-form-input-wrapper">
        <label for="metakeywords#$blockid#" title="#xarML('Add the meta keywords.')#"
        class="xar-form-label">Meta Keywords:</label>
        <div class="xar-form-container-after">
            <textarea name="metakeywords" id="metakeywords#$blockid#"
            class="xar-form-textarealarge">#$metakeywords#</textarea>
        </div>
    </div>
    <div class="xar-form-input-wrapper-after">
    <xar:data-input type="checkbox" name="usegeo" id="usegeo#$blockid#" checked="$usegeo"
    tabindex="1" />
    <label for="usegeo#$blockid#"
    title="#xarML('GeoUrl allows you to locate websites that are geographically close to yours.')#">
    Use GeoURL</label>( 
    <a href="http://geourl.org/" target="_BLANK">About GeoURL</a>)</div>
    <xar:if condition="!empty($usegeo)">
        <div class="xar-form-input-wrapper">
            <label for="longitude#$blockid#" title="#xarML('Enter your longitude.')#"
            class="xar-form-label">Your Longitude:</label>
            <input type="text" name="longitude" id="longitude#$blockid#" value="#$longitude#"
            maxlength="100" class="xar-form-textmedium" />
        </div>
        <div class="xar-form-input-wrapper">
            <label for="latitude#$blockid#" title="#xarML('Enter your latitude')#"
            class="xar-form-label">Your Latitude:</label>
            <input type="text" name="latitude" id="latitude#$blockid#" value="#$latitude#"
            maxlength="100" class="xar-form-textmedium" />
        </div>
    </xar:if>
    <div class="xar-form-input-wrapper">
        <label title="#xarML('Xaraya can dynamically generate your meta keywords based on the words used in your Articles or in your Keywords.')#"
        class="xar-form-label">Use Dynamic Keywords From:</label>
        <div class="xar-form-container-after">
            <div class="xar-displayblock">
                <xar:if condition="$usedk eq 0">
                    <input type="radio" name="usedk" id="usedk#$blockid#_none" value="0" checked="checked" /> 
                    checked="checked" />
                    <xar:else />
                    <input type="radio" name="usedk" id="usedk#$blockid#_none" value="0" />
                </xar:if>
                <label for="usedk#$blockid#_none">None</label>
            </div>
            <div class="xar-displayblock">
                <xar:if condition="$usedk eq 1">
                    <input type="radio" name="usedk" id="usedk#$blockid#_articles" value="1" checked="checked" /> 
                    checked="checked" />
                    <xar:else />
                    <input type="radio" name="usedk" id="usedk#$blockid#_articles" value="1" />
                </xar:if>
                <label for="usedk#$blockid#_articles">Articles module</label>
            </div>
            <div class="xar-displayblock">
                <xar:if condition="$usedk eq 2">
                    <input type="radio" name="usedk" id="usedk#$blockid#_keywords" value="2" checked="checked" /> 
                    checked="checked" />
                    <xar:else />
                    <input type="radio" name="usedk" id="usedk#$blockid#_keywords" value="2" />
                </xar:if>
                <label for="usedk#$blockid#_keywords">Keywords module</label>
            </div>
            <div class="xar-displayblock">
                <xar:if condition="$usedk eq 3">
                    <input type="radio" name="usedk" id="usedk#$blockid#_both" value="3" checked="checked" /> 
                    checked="checked" />
                    <xar:else />
                    <input type="radio" name="usedk" id="usedk#$blockid#_both" value="3" />
                </xar:if>
                <label for="usedk#$blockid#_both">Both</label>
            </div>
        </div>
    </div>
    <div class="xar-form-input-wrapper">
        <label for="copyrightpage#$blockid#"
        title="#xarML('Xaraya can generate the proper links for your copyright page as used by Mozilla and other popular browsers.')#"
        class="xar-form-label">Copyright Page:</label>
        <input type="text" name="copyrightpage" id="copyrightpage#$blockid#"
        value="#$copyrightpage#" maxlength="100" class="xar-form-textlong" />
    </div>
    <div class="xar-form-input-wrapper">
        <label for="helppage#$blockid#"
        title="#xarML('Xaraya can generate the proper links for your help page as used by Mozilla and other popular browsers.')#"
        class="xar-form-label">Help Page:</label>
        <input type="text" name="helppage" id="helppage#$blockid#" value="#$helppage#"
        maxlength="100" class="xar-form-textlong" />
    </div>
    <div class="xar-form-input-wrapper">
        <label for="glossary#$blockid#"
        title="#xarML('Xaraya can generate the proper links for your glossary page as used by Mozilla and other popular browsers.')#"
        class="xar-form-label">Glossary:</label>
        <input type="text" name="glossary" id="glossary#$blockid#" value="#$glossary#"
        maxlength="100" class="xar-form-textlong" />
    </div>
</xar:template>