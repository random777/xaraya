<xar:if condition="$allowed">
    <a href="#$leafitemurl#" title="#$leafitemtitle#" style="text-decoration: none;" class="xar-icon">
        <img src="#$leafitemimage#" alt="#$leafitemtitle#" />
    </a>
<xar:else />
    <img src="#$leafitemimage#" alt="#$leafitemtitle#" title="#$leafitemtitle#" class="xar-icon-disabled" />
</xar:if>


