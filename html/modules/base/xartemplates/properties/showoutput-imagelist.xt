<xar:if condition="$srcpath ne ''" >
    <xar:comment>
        <xar:set name="size">getimagesize($basedir.'/'.$value)</xar:set>
        <img src="#$baseurl#/#$value#" width="#$size[0]#" height="#$size[1]#" alt="#$value#" />
