    <title>Dynamic Data Property Types</title>
    <author initials="M.C." surname="Cortez" fullname="Michael Cortez">
      <organization>Xaraya Development Group</organization>
      <address>
        <email>mcortez@xaraya.com</email>
        <uri>http://EpicSaga.com</uri>
