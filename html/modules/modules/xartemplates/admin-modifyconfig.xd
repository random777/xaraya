<div class="xar-mod-head">
    <span class="xar-mod-title">
        <xar:mlstring>Modules Administration</xar:mlstring>
    </span>
</div>
<div class="xar-mod-body">
    <form method="post" action="&xar-modurl-modules-admin-updateconfig;">
        <fieldset>
            <legend><xar:mlstring>Configuration settings</xar:mlstring></legend>
            <div class="xar-form-input-wrapper-after">
                <xar:if condition="$dashboard eq 1">
                    <input type="checkbox" name="dashboard" id="dashboard" value="1" checked="checked" />
                    <xar:else />
                    <input type="checkbox" name="dashboard" id="dashboard" value="1" />
                </xar:if>
                <label for="dashboard" title="#xarML('Use an Admin Dashboard to manage all your Admin settings from a single page.')#">
                    <xar:mlstring>
                        Use an Admin Dashboard to manage all your Admin settings from a single page. 
                    </xar:mlstring>
                </label>
            </div>
            <div class="xar-form-input-wrapper-after">
                <xar:if condition="$disableoverview eq 1">
                    <input type="checkbox" name="disableoverview" id="disableoverview" value="1" checked="checked" />
                    <xar:else />
                    <input type="checkbox" name="disableoverview" id="disableoverview" value="1" />
                </xar:if>
                <label for="disableoverview" title="#xarML('Disable the display by default of all module overview pages.')#">
                    <xar:mlstring>Disable the display by default of all module overview pages.</xar:mlstring>
                </label>
            </div>
        </fieldset>
        <fieldset>
            <div class="xar-form-input-wrapper-after">
                <input type="hidden" name="authid" id="authid" value="#$authid#" />
                <input type="submit" value="#xarML('Update')#" class="xar-margin-thickright" />
            </div>
        </fieldset>
    </form>
</div>
