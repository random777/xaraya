<?xml version="1.0" encoding="utf-8"?>
<schema name="xaraya">
  <table name="module_vars">
    <column id="module_vars.id" name="id" required="true" auto="true">
      <number size="11" decimals="0"/>
    </column>
    <column id="module_vars.module_id" name="module_id" required="false" auto="false">
      <number size="11" decimals="0"/>
    </column>
    <column id="module_vars.name" name="name" required="true" auto="false">
      <text size="64" defaultvalue=""/>
    </column>
    <column id="module_vars.value" name="value" required="false" auto="false">
      <text/>
    </column>
    <constraints>
      <primary name="id">
        <columnref id="module_vars.id"/>
      </primary>
      <unique name="i_config_name">
        <columnref id="module_vars.name"/>
        <columnref id="module_vars.module_id"/>
      </unique>
      <index name="i_module_vars_module_id">
        <columnref id="module_vars.module_id"/>
      </index>
      <index name="i_module_vars_name">
        <columnref id="module_vars.name"/>
      </index>
    </constraints>
  </table>
